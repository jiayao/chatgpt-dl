{
  "manifest_version": 3,
  "name": "ChatGPT-DL",
  "version": "0.1",
  "description": "Download ChatGPT conversation as a Markdown text file.",
  "permissions": [],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
   
    }
  ],
  "web_accessible_resources": [{
    "resources": ["inject.js"],
    "matches": ["https://chat.openai.com/*"]
  }],
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
